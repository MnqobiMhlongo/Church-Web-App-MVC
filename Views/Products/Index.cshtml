@model IEnumerable<ChurchSystem.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/dLayout.cshtml";
}

<style>
    /* Add this CSS in your stylesheet or in a <style> tag in your view */
    .floating-action-button {
        position: fixed;
        bottom: 20px;
        left: 200px;
        background-color: #007bff; /* Background color of the button */
        border: none;
        border-radius: 50%; /* Make it a circle */
        padding: 10px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5); /* Add a shadow for effect */
        z-index: 999; /* Ensure it's above other content */
    }

        .floating-action-button a {
            text-decoration: none;
            color: white; /* Text color of the button */
            display: block;
            text-align: center;
        }

</style>


