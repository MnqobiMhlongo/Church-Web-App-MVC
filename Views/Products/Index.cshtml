    <div class="row">
        @foreach (var vehicle in Model)
        {
            <div class="col-md-4">
                <div class="card">

                    <img src="data:image/png;base64,@(vehicle.ImageUrl)" class="card-img-top" alt="Vehicle Image">
                    <div class="card-body">
                        <h5 class="card-title">@vehicle.productDescription</h5>
                        <p class="card-text">
                            <strong>Price:</strong> R @vehicle.ProductPrice<br />

                            <a href="@Url.Action("AddToCart", "Basket" ,new { productId = vehicle.productId, quantity = 1 }, null)" class="elements">
                                <img src="~/Content/themes/base/images/add-cart.png" width="40" height="40" />
                            </a>
                        </p>
                    </div>
                </div>
            </div>

        }
    </div>

    <div class="col-lg-2 col-12">
        <div class="get-quote">
            <div style="position: fixed; bottom: 20px; left: 20px;">
                <a href="@Url.Action("Index", "Basket")" class="btn">
                    CART
