@model IEnumerable<ChurchSystem.Models.StudentQuizResult>

@{
    ViewBag.Title = "userReport";
    Layout = "~/Views/Shared/dLayout.cshtml";
}


<center>
    <h2>Student Report</h2>
    <hr style="width:50%" />
</center>


<h4>Courses Completed </h4>
<hr style="width:50%" />
@if(ViewBag.comp != null)
            {
                <img src="~/Content/img/medalt.gif" width="50" height="50" /> @ViewBag.comp
            }
else
            {
                <p>no Courses Completed Yet</p>
            }
<br />
<br />
<h4>Quiz Attempts/Results </h4>
<hr style="width:50%" />


<center>
    <table class="table">
        <tr>
            <th>
                Quiz
            </th>
            <th>
                Passed
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    Quiz @Html.DisplayFor(modelItem => item.QuizId)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Passed)
                </td>
                <td>
                    <a class="btn btn-outline-success" href="@Url.Action("AdminAttemptReview","Quizzes",new {id = item.StudentQuizResultId})">
                        View Attempt
                    </a>
                </td>
            </tr>
        }

    </table>
</center>


