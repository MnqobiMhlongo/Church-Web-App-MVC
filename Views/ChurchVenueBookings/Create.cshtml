@model ChurchSystem.Models.ChurchVenueBooking

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/dLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <center>

            <img src="~/Content/img/appointment.png" width="220" height="220" />

            <h4>Church Venue Booking Details </h4>
            <hr style="width:50%" />
        </center>
        <br />  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.VenueId, "VenueId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VenueId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VenueId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!----- <div class="form-group">
             @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
             <div class="col-md-10">
                 @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                 @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
             </div>
         </div>-->

        <br />
        <center>
            <div class="form-group">
                <strong><h5>Select Date</h5></strong>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.BookingDateTime, "{0:yyyy-MMMM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.BookingDateTime, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <strong><h5>What Kind Of Event Are You Hosting</h5></strong>
                <div class="col-md-10">

                    @Html.DropDownListFor(m => m.EventType, new SelectList(new List<SelectListItem>
                     {
                        new SelectListItem { Text = "Wedding or Formal Celebration", Value = "Wedding or Formal Celebration" },
                        new SelectListItem { Text = "Conference/Seminar", Value = "Conference/Seminar" },
                        new SelectListItem { Text = "Community Meeting", Value = "Community Meeting" },
                        new SelectListItem { Text = "Birthday Celebration", Value = "Birthday Celebration" },
                        new SelectListItem { Text = "Workshop", Value = "Workshop" }
                     }, "Value", "Text"),
                     new { @class = "form-control" })


                    @Html.ValidationMessageFor(model => model.EventType, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Proceed To Booking Details" class="btn btn-primary" />
                </div>
            </div>
        </center>

    </div>
}
