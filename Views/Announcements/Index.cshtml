@model IEnumerable<ChurchSystem.Models.Announcement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/dLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeSent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeSent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.announcement }) |
            @Html.ActionLink("Details", "Details", new { id=item.announcement }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.announcement })
        </td>
    </tr>
}

</table>
