@model ChurchSystem.Models.Order

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/dLayout.cshtml";

}

<br />
<br />
<br />
<br />
<h2>Order Details</h2>

<div>
    <h4>Order Information</h4>
    <hr />
    <dl class="dl-horizontal">
        

        <dt>Order Date:</dt>
        <dd>@Html.DisplayFor(model => model.OrderDate)</dd>
    </dl>
</div>

<div>
    <h4>Order Items</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>

                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>

                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <dl class="dl-horizontal">
        <dt>Total Amount:</dt>
        <dd>@Html.DisplayFor(model => model.TotalAmount)</dd>
        <hr />
        <dt>Order Status:</dt>
        <dd>@Html.DisplayFor(model => model.OrderStatus)</dd>
    </dl>
</div>





@section scripts{
    
    
    
}


